
console.log("Hello from Manager");
document.getElementById("users-tab").addEventListener("click",showUsers(displayUsers));
document.getElementById("requests-tab").addEventListener("click",showRequests(displayUsers));




function showUsers(displayUsers){
	let requestUrl = "http://localhost:8080/RentEventsApp/api/users";
	console.log("holi");
	sendAjaxGet(requestUrl,displayUsers);
}


function showRequests(displayRequests){
	let requestUrl = "http://localhost:8080/RentEventsApp/api/requests";
	sendAjaxGet(requestUrl,displayRequests);
}



function sendAjaxGet(url, callback){
	let xhr = new XMLHttpRequest();
	
	xhr.open("GET", url);
	
	xhr.onreadystatechange = function(){
		if(xhr.readyState===4 && xhr.status===200){
			callback(xhr.response);
		}
	}
	
	xhr.send();
}

function displayUsers(usersJSON){
	let users = JSON.parse(usersJSON);
	console.log(users);
	for(let user of users){
	    this.addTableRow(user.firstName, user.lastName, user.userName,user.numberRequestsDone, user.totalSpends);
	}
}

function displayRequests(requestsJSON){
	
}


function addTableRow(firstName,lastName,userName,nrd,tspends){
	
	let row = document.createElement("tr");
	
	
	row.innerHTML = `<td>${firstName}</td><td>${lastName}</td><td>${userName}</td><td>${nrd}</td><td>${tspends}</td>`;
	   
	
	document.getElementById("users-table").appendChild(row);
}


